<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item
                android:bottom="4dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/blue1" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!--其余状态-->
    <item>
        <layer-list>
            <item
                android:bottom="4dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="0.7dp"
                        android:color="@color/blue1" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>